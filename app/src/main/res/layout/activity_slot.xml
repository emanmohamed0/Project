<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/imges"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xptec2.project.Slot">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date:"
        android:textColor="#FFFFF0"
        android:id="@+id/textView6"
        android:textSize="12pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />
    <EditText
        android:layout_width="fill_parent"
        android:textColor="#FFFFF0"
        android:textSize="12pt"
        android:hint="YY/Mon/Yom"
        android:textColorHint="#808080"
        android:layout_height="0dp"
        android:id="@+id/editText6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_weight="1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time:"
        android:textSize="12pt"
        android:id="@+id/textView7"
        android:textColor="#FFFFF0"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/spinner"
        android:background="#FFFFF0"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Duration:"
        android:textColor="#FFFFF0"
        android:textSize="12pt"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />


    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/spinner2"
        android:background="#FFFFF0"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Search"
        android:textSize="12pt"
        android:background="#808080"
        android:id="@+id/search"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1" />


   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Area 1"
           android:enabled="false"
           android:textSize="10pt"
           android:id="@+id/area1"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="20dp"
           android:layout_alignParentStart="true" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Area 3"
           android:enabled="false"
           android:textSize="10pt"
           android:id="@+id/area3"
           android:layout_above="@+id/area2"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true" />



       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Area 2"
           android:layout_marginTop="10dp"
           android:textSize="10pt"
           android:enabled="false"
           android:id="@+id/area2"
           android:layout_below="@+id/area1"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Area 4"
           android:textSize="10pt"
           android:id="@+id/area4"
           android:enabled="false"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/area3"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Area 5"
           android:textSize="10pt"
           android:id="@+id/area5"
           android:enabled="false"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/area2"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Area 6"
           android:enabled="false"
           android:textSize="10pt"
           android:id="@+id/area6"
           android:layout_marginTop="10dp"
           android:layout_alignBottom="@+id/area5"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Area 7"
           android:enabled="false"
           android:textSize="10pt"
           android:id="@+id/area7"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/area5"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Area 8"
           android:textSize="10pt"
           android:id="@+id/area8"
           android:enabled="false"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/area6"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true" />
       </RelativeLayout>



    <!--<ListView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="201dp"-->
        <!--android:id="@+id/list"-->
        <!--android:saveEnabled="false"-->
        <!--android:layout_below="@+id/search"-->
        <!--android:layout_weight="1"></ListView>-->

</LinearLayout>
</ScrollView>
